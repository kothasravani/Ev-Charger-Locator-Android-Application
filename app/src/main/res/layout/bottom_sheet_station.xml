<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@android:color/white">

    <TextView
        android:id="@+id/station_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Station Name"
        android:textColor="#FF5722"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/station_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Address"
        android:textColor="#182FB3"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/station_level"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" "
        android:textColor="#17C31E"
        android:textSize="14sp" />

    <!-- Add pricing TextView -->
    <TextView
        android:id="@+id/station_pricing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pricing: Not available"
        android:textColor="#666666"
        android:textSize="14sp"
        android:layout_marginTop="4dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:layout_marginTop="8dp">

        <Button
            android:id="@+id/details_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="Details"
            android:textColorLink="#E0562B" />

        <Button
            android:id="@+id/navigate_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:shadowColor="#D9491C"
            android:text="Navigate"
            android:textColorHighlight="#F45625"
            android:textColorHint="#D13F11"
            android:textColorLink="#F66D42"
            app:rippleColor="#DC5328" />

    </LinearLayout>

</LinearLayout>