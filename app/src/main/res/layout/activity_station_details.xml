<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/detailsScroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Top Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/backArrowText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:text="←"
                android:textColor="@android:color/black"
                android:textSize="32sp" />

            <TextView
                android:id="@+id/detailDistanceText"
                android:layout_width="0dp"
                android:layout_weight="0.4"
                android:layout_height="wrap_content"
                android:text="🚗 2.36 Mi"
                android:textColor="#000000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/detailDurationText"
                android:layout_width="0dp"
                android:layout_weight="0.3"
                android:layout_height="wrap_content"
                android:text="5 min"
                android:textColor="#000000"
                android:textSize="16sp"
                android:layout_marginStart="8dp" />

            <ImageButton
                android:id="@+id/navigationBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Navigate"
                android:src="@android:drawable/ic_menu_directions" />
        </LinearLayout>

        <TextView
            android:id="@+id/detailStationName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Holiday Inn Express"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginTop="12dp" />

        <TextView
            android:id="@+id/detailStationAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2929 South Main Street, Maryville, MO, 64468"
            android:textSize="16sp"
            android:layout_marginTop="4dp"
            android:textColor="#444444" />

        <Button
            android:id="@+id/startChargingBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="⚡ Start Charging"
            android:layout_marginTop="16dp"
            android:backgroundTint="@color/teal_700"
            android:textColor="@android:color/white" />

        <!-- Section Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Station Info"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginTop="24dp" />

        <!-- Address -->
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="Address" android:textStyle="bold" android:textColor="#555"
            android:textSize="14sp" android:layout_marginTop="12dp"/>
        <TextView android:id="@+id/fullAddressText" android:layout_width="match_parent" android:layout_height="wrap_content"
            android:textSize="16sp" android:textColor="#333333" />

        <!-- Access Type -->
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="Access" android:textStyle="bold" android:textColor="#555"
            android:textSize="14sp" android:layout_marginTop="12dp"/>
        <TextView android:id="@+id/accessTypeText" android:layout_width="match_parent" android:layout_height="wrap_content"
            android:textSize="16sp" android:textColor="#333333" />

        <!-- Access Time -->
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="Access Time" android:textStyle="bold" android:textColor="#555"
            android:textSize="14sp" android:layout_marginTop="12dp"/>
        <TextView android:id="@+id/accessTimeText" android:layout_width="match_parent" android:layout_height="wrap_content"
            android:textSize="16sp" android:textColor="#333333" />

        <!-- Payment Methods -->
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="Payment Methods" android:textStyle="bold" android:textColor="#555"
            android:textSize="14sp" android:layout_marginTop="12dp"/>
        <TextView android:id="@+id/paymentMethodText" android:layout_width="match_parent" android:layout_height="wrap_content"
            android:textSize="16sp" android:textColor="#333333" />

        <!-- Distance -->
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="Distance" android:textStyle="bold" android:textColor="#555"
            android:textSize="14sp" android:layout_marginTop="12dp"/>
        <TextView android:id="@+id/infoDistance" android:layout_width="match_parent" android:layout_height="wrap_content"
            android:textSize="16sp" android:textColor="#333333" />

        <!-- Driving Time -->
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="Driving Time" android:textStyle="bold" android:textColor="#555"
            android:textSize="14sp" android:layout_marginTop="12dp"/>
        <TextView android:id="@+id/infoDriveTime" android:layout_width="match_parent" android:layout_height="wrap_content"
            android:textSize="16sp" android:textColor="#333333" />

        <!-- Plug Type -->
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="Plug Type" android:textStyle="bold" android:textColor="#555"
            android:textSize="14sp" android:layout_marginTop="12dp"/>
        <TextView android:id="@+id/plugTypeText" android:layout_width="match_parent" android:layout_height="wrap_content"
            android:textSize="16sp" android:textColor="#333333" />

        <!-- Charging Level -->
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="Charging Level" android:textStyle="bold" android:textColor="#555"
            android:textSize="14sp" android:layout_marginTop="12dp"/>
        <TextView android:id="@+id/plugLevelText" android:layout_width="match_parent" android:layout_height="wrap_content"
            android:textSize="16sp" android:textColor="#333333" />

        <!-- Price -->
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="Price" android:textStyle="bold" android:textColor="#555"
            android:textSize="14sp" android:layout_marginTop="12dp"/>
        <TextView android:id="@+id/plugPriceText" android:layout_width="match_parent" android:layout_height="wrap_content"
            android:textSize="16sp" android:textColor="#333333" />

        <!-- Availability -->
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="Availability" android:textStyle="bold" android:textColor="#555"
            android:textSize="14sp" android:layout_marginTop="12dp"/>
        <TextView android:id="@+id/plugAvailabilityText" android:layout_width="match_parent" android:layout_height="wrap_content"
            android:textSize="16sp" android:textColor="#333333" />

        <!-- Last Used -->
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="Last Used" android:textStyle="bold" android:textColor="#555"
            android:textSize="14sp" android:layout_marginTop="12dp"/>
        <TextView android:id="@+id/lastUsedText" android:layout_width="match_parent" android:layout_height="wrap_content"
            android:textSize="16sp" android:textColor="#333333" />
    </LinearLayout>
</ScrollView>
