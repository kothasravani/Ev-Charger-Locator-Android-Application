<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#FFFFFF">

    <LinearLayout
        android:id="@+id/headerContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/back_arrow_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:clickable="true"
            android:focusable="true"
            android:text="\u2190"
            android:textColor="#000000"
            android:textSize="32sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Station Details View"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold" />

    </LinearLayout>

    <!-- Station Name Label -->


    <!-- Address Label -->

    <TextView
        android:id="@+id/viewStationName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="Station Name"
        android:textColor="#000000"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/headerContainer" />

    <TextView
        android:id="@+id/addressLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Address"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@id/viewStationName"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/viewStationLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Location"
        android:textSize="16sp"
        android:textColor="#444444"
        android:maxLines="3"
        android:ellipsize="end"
        app:layout_constraintTop_toBottomOf="@id/addressLabel"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Power Output Label -->
    <TextView
        android:id="@+id/powerOutputLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Power Output"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@id/viewStationLocation"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/viewPowerOutput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Power Output"
        android:textSize="16sp"
        android:textColor="#444444"
        app:layout_constraintTop_toBottomOf="@id/powerOutputLabel"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Availability Label -->
    <TextView
        android:id="@+id/availabilityLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Availability"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@id/viewPowerOutput"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/viewAvailability"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Availability"
        android:textSize="16sp"
        android:textColor="#444444"
        app:layout_constraintTop_toBottomOf="@id/availabilityLabel"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Charging Level Label -->
    <TextView
        android:id="@+id/chargingLevelLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Charging Level"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@id/viewAvailability"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/viewChargingLevel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Charging Level"
        android:textSize="16sp"
        android:textColor="#444444"
        app:layout_constraintTop_toBottomOf="@id/chargingLevelLabel"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Connector Type Label -->
    <TextView
        android:id="@+id/connectorTypeLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Connector Type"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@id/viewChargingLevel"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/viewConnectorType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Connector Type"
        android:textSize="16sp"
        android:textColor="#444444"
        app:layout_constraintTop_toBottomOf="@id/connectorTypeLabel"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Network Label -->
    <TextView
        android:id="@+id/networkLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Network"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@id/viewConnectorType"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/viewNetwork"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Network"
        android:textSize="16sp"
        android:textColor="#444444"
        app:layout_constraintTop_toBottomOf="@id/networkLabel"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Pricing Label -->
    <TextView
        android:id="@+id/pricingLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Pricing"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@id/viewNetwork"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/viewPricing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Pricing"
        android:textSize="16sp"
        android:textColor="#444444"
        app:layout_constraintTop_toBottomOf="@id/pricingLabel"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>